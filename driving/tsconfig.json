{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",

    "declaration": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "baseUrl": "."
  },
  "include": ["src", "node_modules/@types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
